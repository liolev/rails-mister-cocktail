<div class="banner" style="background-image: linear-gradient(-225deg, rgba(89,86,157,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_url("background.jpg")%>');">
  <div class="banner-content">
    <h1 class="index">WELCOME TO COCKTAIL BOOK</h1>
    <p class="indexp">The best website to discover new cocktails !</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>
</div>




<h1 class="text-center index">THE COCKTAIL LIST</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each_with_index do |cocktail, index| %>
      <div class="col-xs-12 col-sm-4">
        <%= render "card", cocktail: cocktail %>
      </div>
    <% end %>
  </div>
</div>
